{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@context/*": ["src/context/*"],
      "@components/*": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@integrations/*": ["src/integrations/*"],
      "@navigation/*": ["src/navigation/*"],
      "@screens/*": ["src/screens/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
